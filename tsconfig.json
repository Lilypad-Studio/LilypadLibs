{
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "logger/*": ["./logger/*"],
      "cache/*": ["./cache/*"],
      "flow/*": ["./flow/*"]
    }
  },
  "include": ["src", "vitest.config.ts", "tsup.config.ts"],
}
