{
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "logger/*": ["./src/logger/*"],
      "cache/*": ["./src/cache/*"]
    }
  },
  "include": ["src", "vitest.config.ts"],
}
